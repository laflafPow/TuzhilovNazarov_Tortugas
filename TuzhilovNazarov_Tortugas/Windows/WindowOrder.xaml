<Window x:Class="TuzhilovNazarov_Tortugas.Windows.WindowOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TuzhilovNazarov_Tortugas.Windows"
        mc:Ignorable="d"
        Title="Заказ" Height="1194" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.105*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.125*"/>
        </Grid.RowDefinitions>


        <!--Меню навигации-->
        <Border
            Grid.ColumnSpan="3"
            Grid.Row="3"
            Background="#FFEFEFEF"
        />

        <Border
            Grid.ColumnSpan="3"
            Grid.Row="0"
        >
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEFEFEF" Offset="0.4"/>
                    <GradientStop Color="#FFF3F3F3" Offset="0.662"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <Border
            Grid.ColumnSpan="3"
            Grid.Row="0"
        >
            <Border.Background>
                <ImageBrush ImageSource="/Images/Header.png" Stretch="Uniform"/>
            </Border.Background>
        </Border>

        <Button 
            x:Name="btnChooseTable"
            Grid.Column="0"
            Grid.Row="3"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="60"
            Width="60" BorderBrush="{x:Null}" Foreground="{x:Null}"
        >
            <Button.Background>
                <ImageBrush ImageSource="/Images/TableUnselected.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <Button 
            x:Name="btnMenu"
            Grid.Column="1"
            Grid.Row="3"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="60"
            Width="60" BorderBrush="{x:Null}" Foreground="{x:Null}"
        >
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="/Images/FoodUnSelected.png"/>
            </Button.Background>
        </Button>

        <Button 
            x:Name="btnOrder"
            Grid.Column="2"
            Grid.Row="3"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Height="60"
            Width="60" Foreground="{x:Null}" BorderBrush="{x:Null}"
        >
            <Button.Background>
                <ImageBrush ImageSource="/Images/OrderSelected.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>

        <ListView x:Name="lvOrder" 
                  Grid.Row="1"
                  Grid.ColumnSpan="3">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Width="200">Продукт</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Description}" Width="200">Описание</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Cost}" Width="200">Цена за 1</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Count}" Width="200">Количество</GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock
            x:Name="tbTotalCost"
            Grid.Row="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="Итоговая цена: 0 р."
            FontSize="20"/>

        <TextBlock
            x:Name="tbTableNumber"
            Grid.Row="2"
            Grid.Column="1"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Text="Номер столика: 0 р."
            FontSize="20"/>
        <StackPanel 
            Grid.Row="2"
            Grid.Column="3"
            VerticalAlignment="Center">

            <Button
                x:Name="btnPay"
                Width="130"
                Height="50"
                Content="Оплатить"
                FontSize="20"
            />

            <ComboBox
                x:Name="cbPaymentMethod"
                Width="130"
                Margin="0 20 0 0"
            />
        </StackPanel>

    </Grid>
</Window>
